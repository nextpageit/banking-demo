@model BankingApplication.Models.Users
@if (Model == null)
{
    return;
}
<div id="setting-details" class="row">
    <div class="text-right add-btn right">
        <a href="@(Common.MyRoot)Users/SaveUser?userId=0">
            <button type="button" class="btn btn-primary">Add User</button>
        </a>
    </div>
    @if (Model.UserList != null && Model.UserList.Any())
    {
        <h1>User List</h1>
        <table class="table table-striped">
            <tr>
                <th>UserName</th>
                <th>Options</th>

            </tr>
            @foreach (var user in Model.UserList)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@Html.ActionLink("View transaction", "Index", "Transactions", new { userId = user.UserId}, new { @class = "coloredlabel" }) | @Html.ActionLink("Withdraw", "TransactionTypes", "Transactions", new { userId = user.UserId, type = "Withdraw" }, new { @class = "coloredlabel" }) | @Html.ActionLink("Deposits", "TransactionTypes", "Transactions", new { userId = user.UserId, type = "Deposit" }, new { @class = "coloredlabel" })</td>
                                    
                </tr>
            }

        </table>
    }
</div>
